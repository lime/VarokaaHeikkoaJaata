<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd">

    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    <screen id="gameScreen" controller="mygame.GameScreenControl">
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="80%" width="100%" valign="bottom" childLayout="center">
                <text id="alert_text" name="alert_text" text="" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"></text>
            </panel>
            <panel id="panel_bottom" height="20%" width="100%" valign="bottom" childLayout="horizontal">
                <panel id="panel_bottom_left" height="100%" width="50%" valign="bottom" childLayout="horizontal">
                </panel>
                <panel id="panel_bottom_right" height="100%" width="50%" valign="bottom" childLayout="vertical">
                    <text text="Liiku: W A S D" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
                    <text text="Hyppää: VÄLI" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
                    <text text="Käynnistä uudelleen: ENTER" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
                    <text text="Poistu: ESC" font="Interface/Fonts/Default.fnt" width="100%" height="100%" wrap="true"/>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>